# Fail fast and fail hard
set -eo pipefail

# Paths
BIN_DIR=$(cd $(dirname $0); pwd) # absolute path
ROOT_DIR=$(dirname $BIN_DIR)
BUILD_DIR=$1
CACHE_DIR=$2
ENV_DIR=$3

echo "========================================================================="
echo BIN_DIR ROOT_DIR BUILD_DIR CACHE_DIR ENV_DIR
echo $BIN_DIR $ROOT_DIR $BUILD_DIR $CACHE_DIR $ENV_DIR
echo "========================================================================="
