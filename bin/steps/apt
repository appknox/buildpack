#

puts-cmd "Updating apt caches"

ls -R $SHERLOCK_APT

apt-get $APT_OPTIONS update | indent

while IFS= read -r PACKAGE
do
	puts-cmd "Fetching .debs for $PACKAGE"
	apt-get $APT_OPTIONS -y --force-yes install --reinstall "$PACKAGE" | indent

done < <(grep -v '^ *#' < "$APTFILE")
